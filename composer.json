{
    "name": "nyholm/reflection-for-your-tests",
    "description": "A small reflection class to be used in tests, debugging and fixtures. Test private and protected properties and methods in a easy way.",
    "license": "MIT",
    "keywords": ["reflection", "test", "debug", "fixture"],
    "homepage": "http://tnyholm.se",
    "authors": [
        {
            "name": "Tobias Nyholm",
            "email": "tobias.nyholm@gmail.com"
        }
    ],
    "require": {
        "php": "^5.3 || ^7.0",
        "webmozart/assert": "^1.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Nyholm\\Reflection\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nyholm\\Reflection\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit --coverage-text --coverage-clover=build/coverage.xml"
    }
}
